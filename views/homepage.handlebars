{{#each blogposts as |blogpost|}}
<section>

  <article class="blogpost-container">
    <div>
      <h2>
        <a class="blogpost-title">{{blogpost.blog_title}}</a>
      </h2>
    </div>

    <div>
      <p>
        Created by
        {{blogpost.user.name}}
      </p>
    </div>

    <div class="blogpost-description">
      <p class="blogpost-text">
        {{blogpost.blog_text}}
      </p>
    </div>
  </article>

</section>
{{/each}}